@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e irá corrigir em breve</h2>
        </div>
    }
    else
    {
        <h2>@Html.Raw(Model.Titulo)</h2>
        <h3 class="text-danger">@Html.Raw(Model.Mensagem)</h3>
    }
}
